{
  "compilerOptions": {
    // >= 10.0.0   ES2018
    // >= 12       ES2019
    // >= 12.9     target: ES2019, lib: ES2020
    // >= 14       ES2020
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "types": ["node", "jest"],
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
